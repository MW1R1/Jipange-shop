<div style="text-align: center;">
  <h2 style="font-size: 24px;"> <%= @artist.name %>'s Profile</h2>
  <label style="font-size: 18px; font-weight: bold;">Name:</label>
  <%= @artist.name %><br>
  <label style="font-size: 18px; font-weight: bold;">Age:</label>
  <%= @artist.age %><br>
  <label style="font-size: 18px; font-weight: bold;">Experience Level:</label>
  <%= @artist.experience %><br>
  <label style="font-size: 18px; font-weight: bold;">Here is a list of all my paintings:</label>
  <ul style="list-style: none; padding: 0;">
    <% @artist.paintings.each do |painting| %>
      <li style="margin-bottom: 10px;">
        <%= link_to painting.name, painting, style: "text-decoration: none; color: #007bff; font-size: 16px; font-weight: bold;" %>
      </li>
    <% end %>
  </ul>
  <%= button_to "Click Here to Retire", @artist, method: :delete, style: "font-size: 16px; background-color: #dc3545; color: #fff; padding: 10px 20px; border-radius: 5px; text-decoration: none; text-transform: uppercase; font-weight: bold;" %>
</div>
